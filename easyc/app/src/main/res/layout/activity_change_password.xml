<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.easyc.Views.options">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/o25" />
    <EditText
        android:id="@+id/passwordchangetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textviewchangeemail"
        android:layout_width="wrap_content"
        style="@style/text"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/passwordchangetext"
        android:layout_alignBottom="@+id/passwordchangetext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="New Password*"
        android:textSize="18sp" />

    <Button
        android:id="@+id/changepasswordbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="117dp"
        android:layout_toEndOf="@+id/textviewchangeemail"
        android:layout_toRightOf="@+id/textviewchangeemail"
        android:text="Change Password" />
</RelativeLayout>
